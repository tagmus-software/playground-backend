{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,  
    "target": "ES2018",                                                                      
     "outDir": "./dist",                                   
    "isolatedModules": true,                         
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,                                             
     "noImplicitAny": true,                                      
    "skipLibCheck": true, 
    "moduleResolution": "Node"                             
  }
}
